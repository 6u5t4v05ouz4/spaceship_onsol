{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/game",
      "destination": "/game.html"
    },
    {
      "source": "/multiplayer",
      "destination": "/multiplayer.html"
    },
    {
      "source": "/play",
      "destination": "/play.html"
    },
    {
      "source": "/((?!api|health|metrics|assets|game|multiplayer|play).*)",
      "destination": "/index.html"
    }
  ]
}
